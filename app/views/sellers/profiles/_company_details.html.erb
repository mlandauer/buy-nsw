<dl id="company-details">
  <h2>Company details</h2>
  <% if authorized_buyer %>
  <dt>Authorised representative</dt>
  <dd>
    <%= seller_version.representative_name %><br>
    <%= tel_to seller_version.representative_phone, "data-module" => "track-outbound-link" %><br>
    <%= mail_to seller_version.representative_email, seller_version.representative_email, "data-module" => "track-outbound-link" %>
  </dd>
  <% end %>

  <dt>ABN</dt>
  <dd><%= link_to formatted_abn(seller_version.abn), abn_lookup_url(seller_version.abn) %></dd>

  <% if authorized_buyer %>
  <dt>Location</td>
  <dd>
    <ul class="addresses">
      <% seller_version.addresses.each do |address| %>
        <li>
          <%= address.address %><br>
          <%= address.suburb %><br>
          <%= address.state %>, <%= address.postcode %><br>
          <%= address.country %>
        </li>
      <% end %>
    </ul>
  </dd>
  <% end %>

  <% if seller_version.accreditations.any? %>
  <dt>Accreditations</dt>
  <dd>
    <ul>
      <% seller_version.accreditations.each do |item| %>
        <li><%= item %></li>
      <% end %>
    </ul>
  </dd>
  <% end %>

  <% if seller_version.engagements.any? %>
  <dt>Industry engagement</dt>
  <dd>
    <ul>
      <% seller_version.engagements.each do |item| %>
        <li><%= item %></li>
      <% end %>
    </ul>
  </dd>
  <% end %>

  <% if authorized_buyer %>
    <dt>Government Experience</dt>
    <dd>
      <%= government_experience_values(seller_version) %>
    </dd>
  <% end %>

</dl>

